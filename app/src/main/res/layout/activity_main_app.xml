<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"

        android:text="Sign Out" />


    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"

        android:text="Settings"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/totalCard"
        android:background="@drawable/gradient_total_subscriptions"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="20dp">

        <TextView
            android:id="@+id/totalPrice"
            android:textColor="#FFFFFF"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/totalSubscriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalPrice"
            android:text="for 50 subscriptions"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/per_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/totalPrice"
            android:textStyle="bold"
            android:text="per week"
            android:gravity="right"
            android:textSize="16dp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/subscriptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/subscriptions"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/newSubscription"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:strokeColor="#4D000000"
        app:strokeWidth="2dp"
        android:drawableLeft="@drawable/ic_add"
        android:onClick="addNewSubscription"
        android:letterSpacing="0"
        android:text="@string/add_new_subscription"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="18dp"
        app:rippleColor="?attr/colorPrimary"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.MaterialView.RoundedOutline"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="30dp"
        tools:itemCount="5"
        tools:listitem="@layout/list_row_expandable"/>

</LinearLayout>